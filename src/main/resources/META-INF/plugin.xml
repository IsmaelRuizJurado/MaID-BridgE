<idea-plugin>
    <id>com.example.maidbridge</id>
    <name>MaID-BridgE</name>
    <version>1.0</version>
    <vendor>Ismael Ruiz Jurado and Pedro Jesús Ruiz Aguilar</vendor>

    <description>
        Get the benefits of monitoriring directly on your development environment with MaID-BridgE!

        [This is part of a final degree project, so no functionality is guaranteed with the use of the extension]
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <actions>
        <action id="com.example.maidbridge.OpenMaidBridgeSettings"
                class="com.example.maidbridge.settings.OpenMaidBridgeSettingsAction"
                text="Configure MaID-BridgE"
                description="Open the configurations tab for the plug-in MaID-BridgE">
            <!--  Menú Tools  -->
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <!--  Menú contextual del proyecto  -->
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="com.example.maidbridge.monitoring.LogMonitoring"/>
        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="com.example.maidbridge.monitoring.ErrorMonitoring"/>
        <projectConfigurable instance="com.example.maidbridge.settings.MaidBridgeSettingsConfigurable" displayName="Configure MaID-BridgE"/>
        <postStartupActivity implementation="com.example.maidbridge.monitoring.RefreshStartupActivity"/>
        <postStartupActivity implementation="com.example.maidbridge.settings.MaidBridgeSettingsNotifier"/>

        <notificationGroup id="MaID-BridgE Notification Group"
                           displayType="BALLOON"
                           isLogByDefault="true"/>

        <toolWindow
                id="MaID-BridgE Total Errors"
                anchor="left"
                factoryClass="com.example.maidbridge.monitoring.TotalErrorsTable"
                secondary="false">
        </toolWindow>
        <toolWindow
                id="MaID-BridgE Error Details"
                anchor="left"
                factoryClass="com.example.maidbridge.monitoring.ErrorsTable"
                secondary="false">
        </toolWindow>
    </extensions>

</idea-plugin>
