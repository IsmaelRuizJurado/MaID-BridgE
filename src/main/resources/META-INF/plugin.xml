<idea-plugin>
    <id>com.example.maidbridge</id>
    <name>MaID-BridgE</name>
    <version>1.0</version>
    <vendor>Ismael Ruiz Jurado y Pedro Jesús Ruiz Aguilar</vendor>

    <description>
        !Consigue lo mejor de la monitorización desde tu entorno de desarrollo con MaID-BridgE¡
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <actions>
        <action id="com.example.maidbridge.OpenElasticSettings"
                class="com.example.maidbridge.settings.OpenElasticSettingsAction"
                text="Configurar Elasticsearch"
                description="Abre la configuración de conexión con Elasticsearch">

            <!-- Menú Tools -->
            <add-to-group group-id="ToolsMenu" anchor="last"/>

            <!-- Menú contextual del proyecto -->
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider
                language="JAVA"
                implementationClass="com.example.maidbridge.MaIDBridgE"/>
        <projectConfigurable instance="com.example.maidbridge.settings.ElasticSettingsConfigurable"
                             displayName="ElasticSearch Settings" />
    </extensions>

</idea-plugin>
